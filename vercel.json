{
  "version": 2,
  "builds": [
    {
      "src": "api/*.py",
      "use": "@vercel/python"
    },
    {
      "src": "templates/**",
      "use": "@vercel/static"
    }
  ],
  "routes": [
    {
      "src": "/",
      "dest": "/templates/index.html"
    },
    {
      "src": "/api/trigger",
      "dest": "/api/trigger.py"
    },
    {
      "src": "/api/health",
      "dest": "/api/health.py"
    }
  ]
}
